{
  "name": "node_restapi_starter",
  "version": "1.0.0",
  "description": "A starter to build REST API with NodeJS and Typescript",
  "main": "./build/index.js",
  "scripts": {
    "tsc": "tsc",
    "start": "nodemon --watch '*.ts' --exec 'ts-node' ./app/index.ts",
    "dev": "ts-node-dev --respawn --transpileOnly ./app/index.ts",
    "prod": "tsc && node ./build/index.js",
    "test": "mocha -r ts-node/register ./app/tests/*/*.ts --recursive",
    "api-designer": "api-designer --port 7011",
    "apidoc": "raml2html --theme raml2html-slate-theme -i public/apidoc/api.raml -o public/apidoc/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tericcabrel/node-restapi-starter.git"
  },
  "author": "Eric Cabrel TIOGO <tericcabrel@yahoo.com>",
  "license": "ISC",
  "dependencies": {
    "joi": "^17.6.1",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "handlebars": "^4.7.7",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.6.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.7.8",
    "redis": "^4.3.1",
    "socket.io": "^4.5.2",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/joi": "^17.2.3",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.0.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.185",
    "@types/mocha": "^9.1.1",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.7.19",
    "@types/nodemailer": "^6.4.6",
    "@types/redis": "^4.0.11",
    "@types/socket.io": "^3.0.2",
    "api-designer": "^0.4.1",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.20",
    "raml2html": "^7.8.0",
    "raml2html-slate-theme": "^2.7.0",
    "request": "^2.88.2",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^4.8.3"
  }
}
