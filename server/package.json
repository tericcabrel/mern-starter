{
  "name": "node_restapi_starter",
  "version": "1.0.0",
  "description": "A starter to build REST API with NodeJS and Typescript",
  "main": "./build/index.js",
  "scripts": {
    "tsc": "tsc",
    "start": "nodemon --watch '*.ts' --exec 'ts-node' ./app/index.ts",
    "dev": "ts-node-dev --respawn --transpileOnly ./app/index.ts",
    "prod": "tsc && node ./build/index.js",
    "test": "mocha -r ts-node/register ./app/tests/*/*.ts --recursive",
    "api-designer": "api-designer --port 7011",
    "apidoc": "raml2html --theme raml2html-slate-theme -i public/apidoc/api.raml -o public/apidoc/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tericcabrel/node-restapi-starter.git"
  },
  "author": "Eric Cabrel TIOGO <tericcabrel@yahoo.com>",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "@types/jsonwebtoken": "^8.3.2",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.1.1",
    "handlebars": "^4.1.2",
    "helmet": "^3.19.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.14",
    "mongoose": "^5.6.4",
    "multer": "^1.4.2",
    "nodemailer": "^6.3.0",
    "redis": "^2.8.0",
    "socket.io": "^2.2.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.10.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/hapi__joi": "^15.0.3",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.8",
    "@types/multer": "^1.3.7",
    "@types/node": "^12.6.6",
    "@types/nodemailer": "^6.2.0",
    "@types/redis": "^2.8.13",
    "@types/socket.io": "^2.1.2",
    "api-designer": "^0.4.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "raml2html": "^7.4.0",
    "raml2html-slate-theme": "^2.5.0",
    "request": "^2.88.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.5.3"
  }
}
